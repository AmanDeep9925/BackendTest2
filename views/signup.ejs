<div class="col-sm-4 mx-auto mb-5">
  <a href="/user/auth/google" class="btn btn-danger btn-lg btn-block">SignUp with Google</a>
</div>

<div id="login-section" >
  <form action="/user/create" method="post" class="card col-sm-4 mx-auto pt-3">

    <div class="form-group col mx-auto">
      <input type="text" name="name" id="user-name" placeholder="Enter Name" class = "form-control"/>

    </div>
    <div class="form-group col mx-auto">
      <input type="email" name="email" id="user-email" placeholder="Enter Email"class = "form-control"/>

    </div>
    <div class="form-group col mx-auto">
      <input type="password" name="password" id="user-password" placeholder="Enter Password"class = "form-control"/>

    </div>
    <div class="form-group col mx-auto">
      <input type="password" name="confirmpassword" id="user-cnfrm-password" placeholder="Confirm Password"class = "form-control"/>

    </div>

    <div class="form-group col  mx-auto">
      <button type="submit" class="btn btn-primary col-sm-12 mx-auto">SignUp</button>

    </div>

  </form>
</div>



